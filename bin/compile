echo "-----> Installing mdbtools 1.0.0"

# Download and extract mdbtools
echo "-----> Download and extract mdbtools 1.0.0"
cd $1
curl https://github.com/pryntad/heroku-buildpack-mdbtools/archive/refs/tags/v0.8.tar.gz -s -O -L
mkdir -p vendor/mdbtools
tar -C vendor/mdbtools -xvzf v0.8.tar.gz

# Compile mdbtools
# echo "-----> Compile mdbtools 1.0.0"
# cd vendor/mdbtools/mdbtools-1.0.0
# autoreconf -i -f 
# ./configure --prefix=$(pwd)
# make
# make install

echo "-----> Adjust \$PATH"
cd $1
build_dir=$1
# status "Setting PATH"
mkdir -p $build_dir/.profile.d
echo "export PATH=\"\$HOME/vendor/mdbtools/heroku-buildpack-mdbtools-0.8/compiled_files:\$PATH\"" > $build_dir/.profile.d/mdbtools.sh

